{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES6",
            "DOM",
            "ESNext"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments":true,
        "noEmitOnError": true,   
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}